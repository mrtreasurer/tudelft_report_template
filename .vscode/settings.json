{
    "latex-workshop.latex.recipe.default": "xelatex",
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-interaction=nonstopmode",
                "-halt-on-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
              "%DOC%"
            ],
            "env": {}
          }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex + bibtex",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ]
}